        <profile>
            <id>fluxtion-worldCity</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.fluxtion.internal</groupId>
                        <artifactId>fluxtion-maven-plugin-inprocess</artifactId>
                        <version>0.1.17-SNAPSHOT</version>
<!--                        <groupId>com.fluxtion</groupId>
                        <artifactId>fluxtion-maven-plugin</artifactId>
                        <version>${fluxtion.plugin.ver}</version>-->
                        <executions>
                            <execution>
                                <id>world city csv processor</id>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                                <configuration>
                                    <fluxtionExePath>${fluxtion.exe.path}</fluxtionExePath>
                                    <className>CsvWorldCityDataProcessor</className>
                                    <packageName>com.fluxtion.casestudy.worldcity.generated.csv</packageName>
                                    <outputDirectory>src/main/java</outputDirectory>
                                    <configClass>com.fluxtion.casestudy.worldcity.WorldCity$CsvCfg</configClass>
                                    <logDebug>true</logDebug>
                                </configuration>
                            </execution>
